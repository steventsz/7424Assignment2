<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/question_card_background"
        android:elevation="4dp">

        <TextView
            android:id="@+id/question_item_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/question_item_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/question_item_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/question_item_option_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:textSize="16sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/question_item_option_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:textSize="16sp"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/question_item_option_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:visibility="gone" />
        </RadioGroup>

        <TextView
            android:id="@+id/question_item_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/answer_background"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>