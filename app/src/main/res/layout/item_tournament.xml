<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/light_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <TextView
                    android:id="@+id/tournament_item_hard_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:background="@color/hard"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tournament_item_medium_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:background="@color/medium"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tournament_item_easy_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:background="@color/easy"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tournament_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tournament Name"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="@color/bg_dark" />

            <TextView
                android:id="@+id/tournament_item_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tournament_item_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date - End Date"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/tournament_item_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    />

                <ImageView
                    android:id="@+id/tournament_item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_thumb_up_gray_24"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Like" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />

                <Button
                    android:id="@+id/tournament_item_answer_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:enabled="false"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/tournament_item_edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/black" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    />
                <Button
                    android:id="@+id/tournament_item_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>